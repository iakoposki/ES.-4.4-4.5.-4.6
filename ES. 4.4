#include <stdio.h>

int main() {
    float voto, SommaVoti = 0;
    int NumeroVoti = 0;

    // ciclo per continuare a chiedere i voti fino all'inserimento di 0
    do {
        printf("Inserisci un voto (0 per terminare): ");
        scanf("%f", &voto);

        if (voto != 0) {
            SommaVoti += voto;
            NumeroVoti++;
        }
    } while (voto != 0);

    // Calcolo della media se sono stati inseriti voti
    if (NumeroVoti > 0) {
        float media = SommaVoti / NumeroVoti;
        printf("La media dei voti Ã¨: %.2f\n", media);
    } else {
